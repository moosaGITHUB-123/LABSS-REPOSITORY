                        <TextBox.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0" Opacity="0.75">
                                <GradientStop Color="#FFE8E8E8" Offset="1"/>
                                <GradientStop Color="White"/>
                            </LinearGradientBrush>
