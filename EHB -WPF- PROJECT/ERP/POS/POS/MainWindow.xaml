                    <TextBox HorizontalAlignment="center" x:Name="txtLoginPassword" Height="42"  TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="320" Padding="10" Margin="10 0 0 0" ToolTip=" ENTER PASSWORD . . ." >

                        <TextBox.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0" Opacity="0.75">
