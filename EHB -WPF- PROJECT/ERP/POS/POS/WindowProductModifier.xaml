                                                            <dxe:TextEdit.Effect>
                                                                <DropShadowEffect ShadowDepth="1" Direction="330" Color="Silver" Opacity="0.9"  BlurRadius="4" />
                                                            </dxe:TextEdit.Effect>
                                                        </dxe:TextEdit>
                                                    </DockPanel>
                                                    <!--=== Text Edit End ====-->

                                                </dxlc:LayoutItem>
                                            </dxlc:LayoutGroup>

                                        </dxlc:LayoutGroup>
                                        <dxlc:LayoutGroup>
                                            <dxlc:LayoutGroup x:Name="layoutGcroup3" Orientation="Vertical" View="GroupBox" Header="ORDER-ABLE" VerticalAlignment="Top" Margin=" 0 5 0 5" >
                                                <dxlc:LayoutItem Label="Order-able  : ">
                                                    <dxe:ToggleSwitch x:Name="ToggOrderAble" Content="ToggleSwitch" Height="30" Width="80" UncheckedStateContent="NO" CheckedStateContent="YES" HorizontalAlignment="Left" FontWeight="Bold" Foreground="Navy"/>
                                                </dxlc:LayoutItem>

                                                <dxlc:LayoutItem IsRequired="True" Label="Order / Production Charges" LabelPosition="Top"  >
                                                    <dxe:TextEdit Name="txtProductionChrgs" MinWidth="200" NullText="NULL" BorderBrush="Transparent" Padding="4">
                                                        <dxe:TextEdit.Effect>
                                                            <DropShadowEffect ShadowDepth="1" Direction="320" Color="Silver" Opacity="0.9"  BlurRadius="4"/>
                                                        </dxe:TextEdit.Effect>
                                                    </dxe:TextEdit>
                                                    <!--=== Text Edit End ====-->
                                                </dxlc:LayoutItem>
                                            </dxlc:LayoutGroup> 
                                        </dxlc:LayoutGroup>



                                    </dxlc:LayoutControl>
                                </Grid>
                            </dxdo:DocumentPanel>
