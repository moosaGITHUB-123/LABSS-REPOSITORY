                                                        <dxe:TextEdit.Effect>
                                                            <DropShadowEffect ShadowDepth="1" Direction="330" Color="Silver" Opacity="0.9"  BlurRadius="4" />
                                                        </dxe:TextEdit.Effect>
                                                    </dxe:TextEdit>
                                                </DockPanel>

                                                <!--=== Text Edit End ====-->
                                            </dxlc:LayoutItem>


                                            <dxlc:LayoutItem IsRequired="True" Label="GSM Amount" LabelPosition="Top">
