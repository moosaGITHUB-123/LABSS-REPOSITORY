                                <Grid>
                                    <dxlc:LayoutControl Orientation="Vertical" Background="White">

                                        <dxlc:LayoutGroup Header="TAX CRITERIA"  Orientation="Vertical" UseLayoutRounding="True" View="GroupBox" Margin=" 0 5 0 5" >
