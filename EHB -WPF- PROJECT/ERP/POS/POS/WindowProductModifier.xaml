                                                        <dxe:ComboBoxEdit  Name="CboAddtChrgsType" DisplayMember="ComboValue" NullText="ADDITIONAL CHARGES" ValueMember="ID"  MinWidth="150" BorderBrush="Transparent"  Padding="4" >
                                                            <dxe:ComboBoxEdit.Effect>
                                                                <DropShadowEffect ShadowDepth="1" Direction="330" Color="Silver" Opacity="0.9"  BlurRadius="4" />
                                                            </dxe:ComboBoxEdit.Effect>
                                                        </dxe:ComboBoxEdit>
                                                        <dxe:TextEdit Name="txtAddtChrgsAmount" NullText="AMOUNT"  BorderBrush="Transparent"  Padding="4" MaskType="Numeric">
                                                            <dxe:TextEdit.Effect   >
                                                                <DropShadowEffect ShadowDepth="1" Direction="330" Color="Silver" Opacity="0.9"  BlurRadius="4" />
                                                            </dxe:TextEdit.Effect>
                                                        </dxe:TextEdit>
                                                    </DockPanel>

                                                    <!--=== Text Edit End ====-->
                                                </dxlc:LayoutItem>
                                                <dxlc:LayoutItem IsRequired="True" Label="Max Discount Allowed %" LabelPosition="Top">

                                                    <DockPanel HorizontalAlignment="Stretch" >
                                                        <dxe:TextEdit Name="txtMaxDiscPercentage" NullText="DISCOUNT PERCENTAGE " MinWidth="150" BorderBrush="Transparent" Padding="4" MaskType="Numeric">

                                                            <dxe:TextEdit.Effect>
                                                                <DropShadowEffect ShadowDepth="1" Direction="330" Color="Silver" Opacity="0.9"  BlurRadius="4" />
                                                            </dxe:TextEdit.Effect>
                                                        </dxe:TextEdit>
                                                        <Label Content=" OR " Padding="4 8"/>
